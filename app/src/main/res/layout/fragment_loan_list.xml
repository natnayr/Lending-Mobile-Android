<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/loan_list_view_search_expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:el_expanded="true"
        app:el_duration="500"
        app:el_parallax="1">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello"/>

        </android.support.v7.widget.CardView>
    </net.cachapa.expandablelayout.ExpandableLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/loan_list_view_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/loan_list_view_search_expandable"
        android:background="@color/color_icons_text"
        tools:context=".view.fragments.LoanListFragment">
        <ListView
            android:id="@+id/listview_loans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/color_divider"
            android:background="@color/color_background"
            android:dividerHeight="1dp"/>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>