<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="wrap_content">
    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/loan_list_view_filtering_expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:el_expanded="false"
        app:el_duration="200"
        app:el_parallax="0">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="true">

            <RelativeLayout
                android:id="@+id/loan_list_view_filtering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_padding"
                android:paddingRight="@dimen/activity_horizontal_padding">
                <TextView
                    android:id="@+id/loan_list_view_filtering_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loan_list_action_filter_title"
                    android:textAllCaps="true"
                    android:textSize="@dimen/list_small_text_size"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/list_view_filtering_label_margin"/>

                <View
                    android:id="@+id/loan_list_view_filtering_first_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_divider_light"
                    android:layout_below="@+id/loan_list_view_filtering_title"/>

                <RelativeLayout
                    android:id="@+id/loan_list_view_filtering_grade_group"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/loan_list_view_filtering_first_line">

                    <TextView
                        android:id="@+id/loan_list_view_filtering_grade_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loan_list_action_filter_grades_label"
                        android:textAllCaps="true"
                        android:textSize="@dimen/list_small_text_size"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="@dimen/list_view_filtering_label_margin"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_toRightOf="@+id/loan_list_view_filtering_grade_label">
                        <LinearLayout
                            android:id="@+id/loan_list_view_filtering_grade_Aplus_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/list_view_filtering_checkbox_padding"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">
                            <com.hanks.library.AnimateCheckBox
                                android:id="@+id/loan_list_view_filtering_grade_Aplus_checkbox"
                                android:layout_width="@dimen/list_view_filtering_checkbox_width"
                                android:layout_height="@dimen/list_view_filtering_checkbox_height"
                                app:animDuration="200"
                                app:lineColor="@color/color_icons_text"
                                app:checkedColor="@color/grade_color_A_plus"
                                app:unCheckColor="@color/color_divider"
                                app:lineWidth="1dp" />
                            <TextView
                                android:id="@+id/loan_list_view_filtering_grade_Aplus_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gradeA_plus"
                                android:textColor="@color/grade_color_A_plus"
                                android:textSize="@dimen/list_small_text_size"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/loan_list_view_filtering_grade_A_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/list_view_filtering_checkbox_padding"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">
                            <com.hanks.library.AnimateCheckBox
                                android:id="@+id/loan_list_view_filtering_grade_A_checkbox"
                                android:layout_width="@dimen/list_view_filtering_checkbox_width"
                                android:layout_height="@dimen/list_view_filtering_checkbox_height"
                                app:animDuration="200"
                                app:lineColor="@color/color_icons_text"
                                app:checkedColor="@color/grade_color_A"
                                app:unCheckColor="@color/color_divider"
                                app:lineWidth="1dp" />
                            <TextView
                                android:id="@+id/loan_list_view_filtering_grade_A_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gradeA"
                                android:textColor="@color/grade_color_A"
                                android:textSize="@dimen/list_small_text_size"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/loan_list_view_filtering_grade_Bplus_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/list_view_filtering_checkbox_padding"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">
                            <com.hanks.library.AnimateCheckBox
                                android:id="@+id/loan_list_view_filtering_grade_Bplus_checkbox"
                                android:layout_width="@dimen/list_view_filtering_checkbox_width"
                                android:layout_height="@dimen/list_view_filtering_checkbox_height"
                                app:animDuration="200"
                                app:lineColor="@color/color_icons_text"
                                app:checkedColor="@color/grade_color_B_plus"
                                app:unCheckColor="@color/color_divider"
                                app:lineWidth="1dp" />
                            <TextView
                                android:id="@+id/loan_list_view_filtering_grade_Bplus_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gradeB_plus"
                                android:textColor="@color/grade_color_B_plus"
                                android:textSize="@dimen/list_small_text_size"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/loan_list_view_filtering_grade_B_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/list_view_filtering_checkbox_padding"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">
                            <com.hanks.library.AnimateCheckBox
                                android:id="@+id/loan_list_view_filtering_grade_B_checkbox"
                                android:layout_width="@dimen/list_view_filtering_checkbox_width"
                                android:layout_height="@dimen/list_view_filtering_checkbox_height"
                                app:animDuration="200"
                                app:lineColor="@color/color_icons_text"
                                app:checkedColor="@color/grade_colorB"
                                app:unCheckColor="@color/color_divider"
                                app:lineWidth="1dp" />
                            <TextView
                                android:id="@+id/loan_list_view_filtering_grade_B_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gradeB"
                                android:textColor="@color/grade_colorB"
                                android:textSize="@dimen/list_small_text_size"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/loan_list_view_filtering_grade_C_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/list_view_filtering_checkbox_padding"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">
                            <com.hanks.library.AnimateCheckBox
                                android:id="@+id/loan_list_view_filtering_grade_C_checkbox"
                                android:layout_width="@dimen/list_view_filtering_checkbox_width"
                                android:layout_height="@dimen/list_view_filtering_checkbox_height"
                                app:animDuration="200"
                                app:lineColor="@color/color_icons_text"
                                app:checkedColor="@color/grade_colorC"
                                app:unCheckColor="@color/color_divider"
                                app:lineWidth="1dp" />
                            <TextView
                                android:id="@+id/loan_list_view_filtering_grade_C_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gradeC"
                                android:textColor="@color/grade_colorC"
                                android:textSize="@dimen/list_small_text_size"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/loan_list_view_filtering_grade_D_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/list_view_filtering_checkbox_padding"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">
                            <com.hanks.library.AnimateCheckBox
                                android:id="@+id/loan_list_view_filtering_grade_D_checkbox"
                                android:layout_width="@dimen/list_view_filtering_checkbox_width"
                                android:layout_height="@dimen/list_view_filtering_checkbox_height"
                                app:animDuration="200"
                                app:lineColor="@color/color_icons_text"
                                app:checkedColor="@color/grade_color_D"
                                app:unCheckColor="@color/color_divider"
                                app:lineWidth="1dp" />
                            <TextView
                                android:id="@+id/loan_list_view_filtering_grade_D_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gradeD"
                                android:textColor="@color/grade_color_D"
                                android:textSize="@dimen/list_small_text_size"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/loan_list_view_filtering_grade_E_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/list_view_filtering_checkbox_padding"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">
                            <com.hanks.library.AnimateCheckBox
                                android:id="@+id/loan_list_view_filtering_grade_E_checkbox"
                                android:layout_width="@dimen/list_view_filtering_checkbox_width"
                                android:layout_height="@dimen/list_view_filtering_checkbox_height"
                                app:animDuration="200"
                                app:lineColor="@color/color_icons_text"
                                app:checkedColor="@color/grade_color_E"
                                app:unCheckColor="@color/color_divider"
                                app:lineWidth="1dp" />
                            <TextView
                                android:id="@+id/loan_list_view_filtering_grade_E_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gradeE"
                                android:textColor="@color/grade_color_E"
                                android:textSize="@dimen/list_small_text_size"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/loan_list_view_filtering_second_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_divider_light"
                    android:layout_below="@+id/loan_list_view_filtering_grade_group"/>

                <RelativeLayout
                    android:id="@+id/loan_list_view_filtering_term_group"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/loan_list_view_filtering_second_line">

                    <TextView
                        android:id="@+id/loan_list_view_filtering_term_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loan_list_action_filter_term_label"
                        android:textAllCaps="true"
                        android:textSize="@dimen/list_small_text_size"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="@dimen/list_view_filtering_label_margin"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_toRightOf="@+id/loan_list_view_filtering_term_label">
                        <LinearLayout
                            android:id="@+id/loan_list_view_filtering_term_3_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/list_view_filtering_switch_view_icon_padding"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="center">
                            <com.github.zagum.switchicon.SwitchIconView
                                android:id="@+id/loan_list_view_filtering_term_3_switch"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                app:si_animation_duration="200"
                                app:si_disabled_alpha=".3"
                                app:si_disabled_color="@color/color_divider_dark"
                                app:si_enabled="true"
                                app:si_tint_color="@color/color_accent"
                                app:si_no_dash="true"
                                app:srcCompat="@drawable/ic_numeric_3_box_multiple_outline_black_24dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/loan_list_view_filtering_term_4_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/list_view_filtering_switch_view_icon_padding"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="center">
                            <com.github.zagum.switchicon.SwitchIconView
                                android:id="@+id/loan_list_view_filtering_term_4_switch"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                app:si_animation_duration="200"
                                app:si_disabled_alpha=".3"
                                app:si_disabled_color="@color/color_divider_dark"
                                app:si_enabled="false"
                                app:si_tint_color="@color/color_accent"
                                app:si_no_dash="true"
                                app:srcCompat="@drawable/ic_numeric_4_box_multiple_outline_black_24dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/loan_list_view_filtering_term_5_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/list_view_filtering_switch_view_icon_padding"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="center">
                            <com.github.zagum.switchicon.SwitchIconView
                                android:id="@+id/loan_list_view_filtering_term_5_switch"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                app:si_animation_duration="200"
                                app:si_disabled_alpha=".3"
                                app:si_disabled_color="@color/color_divider_dark"
                                app:si_enabled="false"
                                app:si_tint_color="@color/color_accent"
                                app:si_no_dash="true"
                                app:srcCompat="@drawable/ic_numeric_5_box_multiple_outline_black_24dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/loan_list_view_filtering_term_6_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/list_view_filtering_switch_view_icon_padding"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="center">
                            <com.github.zagum.switchicon.SwitchIconView
                                android:id="@+id/loan_list_view_filtering_term_6_switch"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                app:si_animation_duration="200"
                                app:si_disabled_alpha=".3"
                                app:si_disabled_color="@color/color_divider_dark"
                                app:si_enabled="false"
                                app:si_tint_color="@color/color_accent"
                                app:si_no_dash="true"
                                app:srcCompat="@drawable/ic_numeric_6_box_multiple_outline_black_24dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/loan_list_view_filtering_term_9_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/list_view_filtering_switch_view_icon_padding"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="center">
                            <com.github.zagum.switchicon.SwitchIconView
                                android:id="@+id/loan_list_view_filtering_term_9_switch"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                app:si_animation_duration="200"
                                app:si_disabled_alpha=".3"
                                app:si_disabled_color="@color/color_divider_dark"
                                app:si_enabled="false"
                                app:si_tint_color="@color/color_accent"
                                app:si_no_dash="true"
                                app:srcCompat="@drawable/ic_numeric_9_box_multiple_outline_black_24dp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/loan_list_view_filtering_third_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_divider_light"
                    android:layout_below="@+id/loan_list_view_filtering_term_group"/>

                <RelativeLayout
                    android:id="@+id/loan_list_view_filtering_security_group"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/loan_list_view_filtering_third_line">

                    <TextView
                        android:id="@+id/loan_list_view_filtering_security_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loan_list_action_filter_security_label"
                        android:textAllCaps="true"
                        android:textSize="@dimen/list_small_text_size"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="@dimen/list_view_filtering_label_margin"/>
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/loan_list_view_filtering_security_label"
                        android:layout_gravity="center">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:id="@+id/loan_list_view_filtering_security_collateralized_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/list_view_filtering_switch_view_icon_padding"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_weight="1">
                                <com.github.zagum.switchicon.SwitchIconView
                                    android:id="@+id/loan_list_view_filtering_security_collateralized_switch"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    app:si_animation_duration="200"
                                    app:si_disabled_alpha=".3"
                                    app:si_disabled_color="@color/color_divider_dark"
                                    app:si_enabled="true"
                                    app:si_tint_color="@color/color_icon_shield"
                                    app:si_no_dash="true"
                                    app:srcCompat="@drawable/ic_shield_black_24dp" />
                                <TextView
                                    android:id="@+id/loan_list_view_filtering_security_collateralized_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/loan_list_action_filter_sec_collateralized"
                                    android:textSize="@dimen/list_small_text_size"
                                    android:maxLines="2"
                                    android:textColor="@color/color_divider_dark"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/loan_list_view_filtering_security_work_order_invoice_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/list_view_filtering_switch_view_icon_padding"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_weight="1">
                                <com.github.zagum.switchicon.SwitchIconView
                                    android:id="@+id/loan_list_view_filtering_security_work_order_invoice_switch"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    app:si_animation_duration="200"
                                    app:si_disabled_alpha=".3"
                                    app:si_disabled_color="@color/color_divider_dark"
                                    app:si_enabled="true"
                                    app:si_tint_color="@color/color_icon_file_text"
                                    app:si_no_dash="true"
                                    app:srcCompat="@drawable/ic_file_document_black_24dp" />
                                <TextView
                                    android:id="@+id/loan_list_view_filtering_security_work_order_invoice_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/loan_list_action_filter_sec_invoice_or_cheque"
                                    android:textSize="@dimen/list_small_text_size"
                                    android:maxLines="2"
                                    android:textColor="@color/color_divider_dark"/>
                            </LinearLayout>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:id="@+id/loan_list_view_filtering_security_uncollateralized_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/list_view_filtering_switch_view_icon_padding"
                                android:orientation="horizontal"
                                android:layout_alignParentRight="true"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_column="0">
                                <com.github.zagum.switchicon.SwitchIconView
                                    android:id="@+id/loan_list_view_filtering_security_uncollateralized_switch"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    app:si_animation_duration="200"
                                    app:si_disabled_alpha=".3"
                                    app:si_disabled_color="@color/color_divider_dark"
                                    app:si_enabled="true"
                                    app:si_tint_color="@color/color_icon_unlock_alt"
                                    app:si_no_dash="true"
                                    app:srcCompat="@drawable/ic_lock_open_black_24dp" />
                                <TextView
                                    android:id="@+id/loan_list_view_filtering_security_uncollateralized_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/loan_list_action_filter_sec_uncollateralized"
                                    android:textSize="@dimen/list_small_text_size"
                                    android:maxLines="2"
                                    android:textColor="@color/color_divider_dark"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/list_view_filtering_switch_view_icon_padding"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_column="1"/>
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/loan_list_view_filtering_fourth_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_divider_light"
                    android:layout_below="@+id/loan_list_view_filtering_security_group"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/loan_list_view_filtering_fourth_line">
                    <TextView
                        android:id="@+id/loan_list_view_filtering_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textStyle="italic"
                        android:textColor="@color/color_secondary_text"
                        android:textSize="@dimen/list_small_text_size"
                        android:layout_marginStart="@dimen/activity_horizontal_padding"/>

                    <LinearLayout
                        android:id="@+id/loan_list_view_filtering_hide_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/list_view_filtering_action_btn_horizontal_margin"
                        android:layout_marginStart="@dimen/list_view_filtering_action_btn_horizontal_margin"
                        android:layout_marginBottom="@dimen/list_view_filtering_action_btn_vertical_margin"
                        android:layout_marginTop="@dimen/list_view_filtering_action_btn_vertical_margin"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/loan_list_action_filter_hide"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/loan_list_filtering_action_btn_layout"
                        android:backgroundTint="@color/color_primary_300">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
