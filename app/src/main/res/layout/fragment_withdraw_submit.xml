<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/wallet_card_vertical_padding"
        android:paddingBottom="@dimen/wallet_card_vertical_padding"
        android:paddingStart="@dimen/wallet_card_horizontal_padding"
        android:paddingEnd="@dimen/wallet_card_horizontal_padding">
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing"
            android:layout_marginBottom="@dimen/wallet_card_item_vertical_spacing"
            android:layout_marginStart="@dimen/wallet_card_item_horizontal_spacing"
            android:layout_marginEnd="@dimen/wallet_card_item_horizontal_spacing">
            <EditText
                android:id="@+id/withdraw_submit_amount_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/wallet_large_font_size"
                android:maxLength="50"
                android:maxLines="1"
                android:inputType="number"
                android:hint="@string/withdraw_submit_enter_amount_hint"
                android:textColor="@color/color_primary_text"
                android:textColorHint="@color/color_secondary_text" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing"
            android:layout_marginBottom="@dimen/wallet_card_item_vertical_spacing"
            android:layout_marginStart="@dimen/wallet_card_item_horizontal_spacing"
            android:layout_marginEnd="@dimen/wallet_card_item_horizontal_spacing"
            android:textSize="@dimen/wallet_large_font_size"
            android:text="@string/withdraw_submit_notice_statement"
            android:fontFamily="@string/font_family_regular"
            android:gravity="start" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/color_background_100"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/withdraw_submit_account_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/wallet_info_header_vertical_spacing"
                    android:layout_marginBottom="@dimen/wallet_info_header_vertical_spacing"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/withdraw_submit_account_holder_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/withdraw_submit_account_holder_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:textColor="@color/color_primary_text"
                        android:textSize="@dimen/wallet_large_font_size"
                        android:fontFamily="@string/font_family_medium"/>
                </LinearLayout>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_icons_text"
                    android:paddingStart="@dimen/wallet_card_item_horizontal_spacing"
                    android:paddingEnd="@dimen/wallet_card_item_horizontal_spacing"
                    android:paddingTop="@dimen/wallet_card_item_vertical_spacing"
                    android:paddingBottom="@dimen/wallet_card_item_vertical_spacing"
                    android:layout_below="@+id/withdraw_submit_account_header">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/wallet_large_font_size"
                            android:text="@string/withdraw_submit_account_holder_account_number"/>
                        <TextView
                            android:id="@+id/withdraw_submit_account_number_value"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="end"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/wallet_large_font_size" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/wallet_large_font_size"
                            android:text="@string/withdraw_submit_account_holder_bank_name"/>
                        <TextView
                            android:id="@+id/withdraw_submit_account_bank_name_value"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="end"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/wallet_large_font_size" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/wallet_large_font_size"
                            android:text="@string/withdraw_submit_account_holder_account_type"/>
                        <TextView
                            android:id="@+id/withdraw_submit_account_type_value"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="end"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/wallet_large_font_size" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/wallet_large_font_size"
                            android:text="@string/withdraw_submit_account_holder_account_bank_address"/>
                        <TextView
                            android:id="@+id/withdraw_submit_account_bank_address_value"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="end"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/wallet_large_font_size" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing"
                        android:layout_marginBottom="@dimen/wallet_card_item_vertical_spacing">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/wallet_large_font_size"
                            android:text="@string/withdraw_submit_account_holder_account_location"/>
                        <TextView
                            android:id="@+id/withdraw_submit_account_location_value"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="end"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/wallet_large_font_size" />
                    </TableRow>
                </TableLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing"
            android:layout_marginBottom="@dimen/wallet_card_item_vertical_spacing"
            android:text="@string/top_up_submit_upload_submit_label"
            android:clickable="true"
            app:backgroundTint="@color/color_primary"
            style="@style/Widget.AppCompat.Button.Colored"/>
    </LinearLayout>
</ScrollView>