<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/wallet_card_vertical_padding"
        android:paddingBottom="@dimen/wallet_card_vertical_padding"
        android:paddingStart="@dimen/wallet_card_horizontal_padding"
        android:paddingEnd="@dimen/wallet_card_horizontal_padding">
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/color_icons_text"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing"
                android:layout_marginBottom="@dimen/wallet_card_item_vertical_spacing"
                android:layout_marginStart="@dimen/wallet_card_item_horizontal_spacing"
                android:layout_marginEnd="@dimen/wallet_card_item_horizontal_spacing">
                <EditText
                    android:id="@+id/withdraw_submit_transfer_amount_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/wallet_large_font_size"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:inputType="number"
                    android:hint="@string/withdraw_submit_enter_amount_hint"
                    android:textColor="@color/color_primary_text"
                    android:textColorHint="@color/color_secondary_text" />
            </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing"
            android:layout_marginBottom="@dimen/wallet_card_item_vertical_spacing"
            android:layout_marginStart="@dimen/wallet_card_item_horizontal_spacing"
            android:layout_marginEnd="@dimen/wallet_card_item_horizontal_spacing"
            android:textSize="@dimen/wallet_large_font_size"
            android:text="@string/withdraw_submit_notice_statement"
            android:fontFamily="@string/font_family_medium"
            android:gravity="start" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/color_background_100"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/withdraw_submit_account_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/wallet_info_header_vertical_spacing"
                    android:layout_marginBottom="@dimen/wallet_info_header_vertical_spacing"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/withdraw_submit_account_holder_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/withdraw_submit_account_holder_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:textColor="@color/color_primary_text"
                        android:textSize="@dimen/wallet_large_font_size"
                        android:fontFamily="@string/font_family_medium"/>
                </LinearLayout>
                <TableLayout
                    android:id="@+id/withdraw_submit_account_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_icons_text"
                    android:paddingStart="@dimen/wallet_card_item_horizontal_spacing"
                    android:paddingEnd="@dimen/wallet_card_item_horizontal_spacing"
                    android:paddingTop="@dimen/wallet_card_item_vertical_spacing"
                    android:paddingBottom="@dimen/wallet_card_item_vertical_spacing"
                    android:layout_below="@+id/withdraw_submit_account_header">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/wallet_large_font_size"
                            android:text="@string/withdraw_submit_account_holder_account_number"/>
                        <TextView
                            android:id="@+id/withdraw_submit_account_number_value"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="end"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/wallet_large_font_size" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/wallet_large_font_size"
                            android:text="@string/withdraw_submit_account_holder_bank_name"/>
                        <TextView
                            android:id="@+id/withdraw_submit_account_bank_name_value"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="end"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/wallet_large_font_size" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/wallet_large_font_size"
                            android:text="@string/withdraw_submit_account_holder_account_type"/>
                        <TextView
                            android:id="@+id/withdraw_submit_account_type_value"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="end"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/wallet_large_font_size" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/wallet_large_font_size"
                            android:text="@string/withdraw_submit_account_holder_account_bank_address"/>
                        <TextView
                            android:id="@+id/withdraw_submit_account_bank_address_value"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="end"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/wallet_large_font_size" />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing"
                        android:layout_marginBottom="@dimen/wallet_card_item_vertical_spacing">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/wallet_large_font_size"
                            android:text="@string/withdraw_submit_account_holder_account_location"/>
                        <TextView
                            android:id="@+id/withdraw_submit_account_location_value"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="end"
                            android:fontFamily="@string/font_family_light"
                            android:textSize="@dimen/wallet_large_font_size" />
                    </TableRow>
                </TableLayout>
                <LinearLayout
                    android:id="@+id/withdraw_submit_account_request_change_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/wallet_info_header_vertical_spacing"
                    android:paddingBottom="@dimen/wallet_info_header_vertical_spacing"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/wallet_btn_base"
                    android:clickable="true"
                    android:layout_below="@+id/withdraw_submit_account_body">
                    <TextView
                        android:id="@+id/withdraw_submit_account_request_change_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/wallet_card_item_horizontal_spacing"
                        android:textColor="@color/color_icons_text"
                        android:textSize="@dimen/wallet_large_font_size"
                        android:textAllCaps="true"
                        android:text="@string/withdraw_submit_account_request_for_change"
                        android:fontFamily="@string/font_family_medium"/>
                    <ImageView
                        android:id="@+id/withdraw_submit_account_request_change_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/color_background_100"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/withdraw_submit_notes_fees_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/wallet_info_header_vertical_spacing"
                    android:layout_marginBottom="@dimen/wallet_info_header_vertical_spacing"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/withdraw_submit_notes_fees_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/withdraw_submit_notes_fees_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:textColor="@color/color_primary_text"
                        android:textSize="@dimen/wallet_large_font_size"
                        android:text="@string/withdraw_submit_notes_fees_header"
                        android:fontFamily="@string/font_family_medium"/>
                    <ImageView
                        android:id="@+id/withdraw_submit_notes_fees_tap_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/withdraw_submit_notes_fees_expandable_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:el_expanded="false"
                    android:background="@color/color_icons_text"
                    android:layout_below="@+id/withdraw_submit_notes_fees_header">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing"
                        android:layout_marginBottom="@dimen/wallet_card_item_vertical_spacing"
                        android:layout_marginStart="@dimen/wallet_card_item_horizontal_spacing"
                        android:layout_marginEnd="@dimen/wallet_card_item_horizontal_spacing"
                        android:gravity="start">
                        <TextView
                            android:id="@+id/withdraw_submit_fees_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/wallet_small_font_size"
                            android:fontFamily="@string/font_family_regular"
                            android:layout_alignParentTop="true"/>
                        <LinearLayout
                            android:id="@+id/withdraw_submit_fees_body_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@id/withdraw_submit_fees_title">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/withdraw_submit_notes_fees_list_1" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/withdraw_submit_fees_content_1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/withdraw_submit_fee_body_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/withdraw_submit_fees_body_1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/withdraw_submit_notes_fees_list_2" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/withdraw_submit_fees_content_2"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/withdraw_submit_fee_body_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/withdraw_submit_fee_body_2">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/withdraw_submit_notes_fees_list_3" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/withdraw_submit_fees_content_3"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/withdraw_submit_fee_body_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/withdraw_submit_fee_body_3">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/withdraw_submit_notes_fees_list_4" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/withdraw_submit_fees_content_4"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/withdraw_submit_notes_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing"
                            android:textSize="@dimen/wallet_small_font_size"
                            android:fontFamily="@string/font_family_regular"
                            android:layout_below="@+id/withdraw_submit_fee_body_4"/>
                        <LinearLayout
                            android:id="@+id/withdraw_submit_notes_body_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@id/withdraw_submit_notes_title">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/withdraw_submit_notes_fees_list_1" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/withdraw_submit_notes_content_1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/withdraw_submit_notes_body_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/withdraw_submit_notes_body_1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/withdraw_submit_notes_fees_list_2" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/withdraw_submit_notes_content_2"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/withdraw_submit_notes_body_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/withdraw_submit_notes_body_2">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/withdraw_submit_notes_fees_list_3" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/withdraw_submit_notes_content_3"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/withdraw_submit_notes_body_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/withdraw_submit_notes_body_3">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/withdraw_submit_notes_fees_list_4" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/withdraw_submit_notes_content_4"/>
                        </LinearLayout>

                    </RelativeLayout>
                </net.cachapa.expandablelayout.ExpandableLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <Button
            android:id="@+id/withdraw_submit_transfer_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing"
            android:layout_marginBottom="@dimen/wallet_card_item_vertical_spacing"
            android:text="@string/withdraw_submit_label"
            android:clickable="true"
            android:enabled="false"
            app:backgroundTint="@color/wallet_submit_btn_color"
            style="@style/Widget.AppCompat.Button.Colored"/>
    </LinearLayout>
</ScrollView>