<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data/>
    <RelativeLayout
        android:id="@+id/learning_center_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:background="@color/color_background">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/learning_center_input_layout_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:focusableInTouchMode="true"
            android:layout_alignParentTop="true">
            <EditText
                android:id="@+id/learning_center_input_edittext_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="16sp"
                android:textColor="@color/color_secondary_text"
                android:hint="Search"
                android:textColorHint="@color/color_accent"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_search_black_16dp"
                android:drawableTint="@color/color_secondary_text"
                android:focusable="true" />
        </android.support.design.widget.TextInputLayout>

        <ScrollView
            android:id="@+id/learning_center_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_below="@+id/learning_center_input_layout_search">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/learning_center_relative_layout_general"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/learning_center_categories_margin"
                    android:background="@drawable/learning_category_label_layout"
                    android:nestedScrollingEnabled="false"
                    android:layout_alignParentTop="true">
                    <TextView
                        android:id="@+id/learning_center_title_general"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/learning_center_categories_title_size"
                        android:text="@string/learning_center_categories_label_general"
                        android:textAllCaps="true"
                        android:textColor="@color/color_primary_700"
                        android:layout_alignParentStart="true"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_information_outline_black_24dp"
                        android:drawableTint="@color/color_primary_700"
                        android:drawablePadding="@dimen/learning_center_categories_title_drawable_padding" />
                    <TextView
                        android:id="@+id/learning_center_item_count_general"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/learning_center_categories_count_size"
                        android:textStyle="italic"
                        android:textColor="@color/color_primary_700"
                        android:layout_toStartOf="@+id/learning_center_triangle_general" />
                    <ImageView
                        android:id="@+id/learning_center_triangle_general"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/learning_center_categories_image_rotate_margin_start"
                        android:src="@drawable/ic_arrow_down_drop_circle_outline_black_24dp"
                        android:tint="@color/color_primary_700"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/learning_center_expand_general"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/learning_center_relative_layout_general"
                    android:orientation="vertical"
                    app:el_expanded="false"
                    app:el_duration="500"
                    app:el_parallax="0.5">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/learning_center_recycle_view_general"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:layout_marginTop="@dimen/learning_center_list_view_margin_top"/>
                </net.cachapa.expandablelayout.ExpandableLayout>

                <RelativeLayout
                    android:id="@+id/learning_center_relative_layout_investor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/learning_center_expand_general"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/learning_center_categories_margin"
                    android:background="@drawable/learning_category_label_layout">
                    <TextView
                        android:id="@+id/learning_center_title_investor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/learning_center_categories_title_size"
                        android:text="@string/learning_center_categories_label_investor"
                        android:textAllCaps="true"
                        android:textColor="@color/color_primary_700"
                        android:layout_alignParentStart="true"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_account_multiple_black_24dp"
                        android:drawableTint="@color/color_primary_700"
                        android:drawablePadding="@dimen/learning_center_categories_title_drawable_padding"/>
                    <TextView
                        android:id="@+id/learning_center_item_count_investor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/learning_center_categories_count_size"
                        android:textStyle="italic"
                        android:textColor="@color/color_primary_700"
                        android:layout_toStartOf="@+id/learning_center_triangle_investor" />
                    <ImageView
                        android:id="@+id/learning_center_triangle_investor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/learning_center_categories_image_rotate_margin_start"
                        android:src="@drawable/ic_arrow_down_drop_circle_outline_black_24dp"
                        android:tint="@color/color_primary_700"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/learning_center_expand_investor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/learning_center_relative_layout_investor"
                    android:orientation="vertical"
                    app:el_expanded="false"
                    app:el_duration="500"
                    app:el_parallax="0.5">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/learning_center_recycle_view_investor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:layout_marginTop="@dimen/learning_center_list_view_margin_top"/>
                </net.cachapa.expandablelayout.ExpandableLayout>
                <RelativeLayout
                    android:id="@+id/learning_center_relative_layout_borrower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/learning_center_expand_investor"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/learning_center_categories_margin"
                    android:background="@drawable/learning_category_label_layout">
                    <TextView
                        android:id="@+id/learning_center_title_borrower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/learning_center_categories_title_size"
                        android:text="@string/learning_center_categories_label_borrower"
                        android:textAllCaps="true"
                        android:textColor="@color/color_primary_700"
                        android:layout_alignParentStart="true"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_rocket_black_24dp"
                        android:drawableTint="@color/color_primary_700"
                        android:drawablePadding="@dimen/learning_center_categories_title_drawable_padding"/>
                    <TextView
                        android:id="@+id/learning_center_item_count_borrower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/learning_center_categories_count_size"
                        android:textStyle="italic"
                        android:textColor="@color/color_primary_700"
                        android:layout_toStartOf="@+id/learning_center_triangle_borrower"/>
                    <ImageView
                        android:id="@+id/learning_center_triangle_borrower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/learning_center_categories_image_rotate_margin_start"
                        android:src="@drawable/ic_arrow_down_drop_circle_outline_black_24dp"
                        android:tint="@color/color_primary_700"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/learning_center_expand_borrowers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/learning_center_relative_layout_borrower"
                    android:orientation="vertical"
                    app:el_expanded="false"
                    app:el_duration="500"
                    app:el_parallax="0.5">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/learning_center_recycle_view_borrowers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:layout_marginTop="@dimen/learning_center_list_view_margin_top"/>
                </net.cachapa.expandablelayout.ExpandableLayout>
                <RelativeLayout
                    android:id="@+id/learning_center_relative_layout_fees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/learning_center_expand_borrowers"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/learning_center_categories_margin"
                    android:background="@drawable/learning_category_label_layout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/learning_center_categories_title_size"
                        android:text="@string/learning_center_categories_label_fees"
                        android:textAllCaps="true"
                        android:textColor="@color/color_primary_700"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_attach_money_black_24dp"
                        android:drawableTint="@color/color_primary_700"
                        android:drawablePadding="@dimen/learning_center_categories_title_drawable_padding"/>
                    <ImageView
                        android:id="@+id/learning_center_triangle_fees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_down_drop_circle_outline_black_24dp"
                        android:tint="@color/color_primary_700"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/learning_center_expand_fees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/learning_center_relative_layout_fees"
                    app:el_expanded="false"
                    app:el_duration="500"
                    app:el_parallax="0.5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="email"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/activity_horizontal_padding"
                        android:text="@string/learning_center_msg_fees"
                        android:textIsSelectable="true"
                        android:longClickable="true"
                        android:textSize="@dimen/item_learning_center_question_text_size"/>
                </net.cachapa.expandablelayout.ExpandableLayout>
                <RelativeLayout
                    android:id="@+id/learning_center_relative_layout_loan_documents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/learning_center_expand_fees"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/learning_center_categories_margin"
                    android:background="@drawable/learning_category_label_layout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/learning_center_categories_title_size"
                        android:text="@string/learning_center_categories_label_loan_document"
                        android:textAllCaps="true"
                        android:textColor="@color/color_primary_700"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_book_open_black_24dp"
                        android:drawableTint="@color/color_primary_700"
                        android:drawablePadding="@dimen/learning_center_categories_title_drawable_padding"/>
                    <ImageView
                        android:id="@+id/learning_center_triangle_loan_documents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_down_drop_circle_outline_black_24dp"
                        android:tint="@color/color_primary_700"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/learning_center_expand_loan_documents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/learning_center_relative_layout_loan_documents"
                    app:el_expanded="false"
                    app:el_duration="500"
                    app:el_parallax="0.5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="email"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/activity_horizontal_padding"
                        android:text="@string/learning_center_msg_fees"
                        android:textIsSelectable="true"
                        android:longClickable="true"
                        android:textSize="@dimen/item_learning_center_question_text_size"/>
               </net.cachapa.expandablelayout.ExpandableLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</layout>