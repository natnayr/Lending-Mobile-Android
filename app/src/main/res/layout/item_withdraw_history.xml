<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/color_background_100"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    android:layout_marginTop="@dimen/wallet_card_vertical_padding"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/item_withdraw_history_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/wallet_card_item_horizontal_spacing"
            android:layout_marginEnd="@dimen/wallet_card_item_horizontal_spacing"
            android:layout_marginTop="@dimen/wallet_info_header_vertical_spacing"
            android:layout_marginBottom="@dimen/wallet_info_header_vertical_spacing"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:weightSum="4">
            <TextView
                android:id="@+id/item_withdraw_history_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_primary_text"
                android:textSize="@dimen/wallet_large_font_size"
                android:fontFamily="@string/font_family_light"
                android:maxLines="1"
                android:gravity="start"/>
            <TextView
                android:id="@+id/item_withdraw_history_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/color_primary_text"
                android:textSize="@dimen/wallet_large_font_size"
                android:fontFamily="@string/font_family_medium"
                android:maxLines="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/item_withdraw_history_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/wallet_large_font_size"
                android:fontFamily="@string/font_family_medium"
                android:maxLines="1"
                android:gravity="end"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_withdraw_history_ref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_icons_text"
            android:paddingStart="@dimen/wallet_card_item_horizontal_spacing"
            android:paddingEnd="@dimen/wallet_card_item_horizontal_spacing"
            android:paddingTop="@dimen/wallet_card_item_vertical_spacing"
            android:paddingBottom="@dimen/wallet_card_item_vertical_spacing"
            android:layout_below="@+id/item_withdraw_history_header"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_primary_text"
                android:textSize="@dimen/wallet_large_font_size"
                android:fontFamily="@string/font_family_light"
                android:gravity="start"
                android:text="@string/withdraw_history_item_transaction_reference"/>
            <TextView
                android:id="@+id/item_withdraw_history_ref_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/color_primary_text"
                android:textSize="@dimen/wallet_small_font_size"
                android:fontFamily="@string/font_family_light"
                android:textStyle="italic"
                android:gravity="end" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_withdraw_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_icons_text"
            android:paddingStart="@dimen/wallet_card_item_horizontal_spacing"
            android:paddingEnd="@dimen/wallet_card_item_horizontal_spacing"
            android:paddingTop="@dimen/wallet_card_item_vertical_spacing"
            android:paddingBottom="@dimen/wallet_card_item_vertical_spacing"
            android:layout_below="@+id/item_withdraw_history_ref"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_primary_text"
                android:textSize="@dimen/wallet_large_font_size"
                android:fontFamily="@string/font_family_light"
                android:gravity="start"
                android:text="@string/withdraw_history_item_fees"/>
            <TextView
                android:id="@+id/item_withdraw_history_fee_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/color_primary_text"
                android:textSize="@dimen/wallet_large_font_size"
                android:fontFamily="@string/font_family_medium"
                android:gravity="end" />
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>