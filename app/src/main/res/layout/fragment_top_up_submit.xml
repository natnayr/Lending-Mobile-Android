<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/top_up_card_vertical_padding"
    android:paddingBottom="@dimen/top_up_card_vertical_padding">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/top_up_card_horizontal_margin"
        android:layout_marginEnd="@dimen/top_up_card_horizontal_margin"
        app:cardCornerRadius="3dp"
        app:cardBackgroundColor="@color/color_background_100"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/top_up_submit_payment_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_up_info_header_vertical_spacing"
                android:layout_marginBottom="@dimen/top_up_info_header_vertical_spacing"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:id="@+id/top_up_submit_payment_icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/top_up_submit_payment_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Upload Proof of Payment"
                    android:textColor="@color/color_primary_text"
                    android:textSize="@dimen/top_up_large_font_size"
                    android:fontFamily="@string/font_family_medium" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/top_up_submit_payment_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_icons_text"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_below="@+id/top_up_submit_payment_header">
                <RelativeLayout
                    android:id="@+id/top_up_submit_payment_file_button"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:clickable="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/top_up_upload_btn">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/top_up_upload_round"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_update_black_24dp"
                            android:tint="@color/color_icons_text"/>
                    </LinearLayout>

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</ScrollView>