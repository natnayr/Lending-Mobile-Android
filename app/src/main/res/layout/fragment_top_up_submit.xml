<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/top_up_card_vertical_padding"
    android:paddingBottom="@dimen/top_up_card_vertical_padding"
    android:paddingStart="@dimen/top_up_card_horizontal_padding"
    android:paddingEnd="@dimen/top_up_card_horizontal_padding">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/color_background_100"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/top_up_submit_payment_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_up_info_header_vertical_spacing"
                    android:layout_marginBottom="@dimen/top_up_info_header_vertical_spacing"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/top_up_submit_payment_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/top_up_submit_payment_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="Upload Proof of Payment"
                        android:textColor="@color/color_primary_text"
                        android:textSize="@dimen/top_up_large_font_size"
                        android:fontFamily="@string/font_family_medium" />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/top_up_submit_payment_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_icons_text"
                    android:paddingStart="@dimen/top_up_card_item_horizontal_spacing"
                    android:paddingEnd="@dimen/top_up_card_item_horizontal_spacing"
                    android:paddingTop="@dimen/top_up_card_item_vertical_spacing"
                    android:paddingBottom="@dimen/top_up_card_item_vertical_spacing"
                    android:layout_below="@+id/top_up_submit_payment_header">
                    <RelativeLayout
                        android:id="@+id/top_up_submit_payment_upload_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/top_up_card_item_vertical_spacing"
                        android:layout_marginBottom="@dimen/top_up_card_item_vertical_spacing"
                        android:clickable="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/top_up_upload_btn">
                        <LinearLayout
                            android:id="@+id/top_up_submit_payment_upload_instruction"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerInParent="true">
                            <TextView
                                android:id="@+id/top_up_submit_payment_upload_instruction_main"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/top_up_card_item_vertical_spacing"
                                android:layout_marginBottom="@dimen/top_up_card_item_vertical_spacing"
                                android:text="Tap Here to Upload File"
                                android:maxLines="2"
                                android:textSize="@dimen/top_up_large_font_size"
                                android:textColor="@color/color_secondary_text"/>
                            <TextView
                                android:id="@+id/top_up_submit_payment_upload_instruction_sub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/top_up_card_item_vertical_spacing"
                                android:text="Maximum file size: 2MB"
                                android:maxLines="2"
                                android:textSize="@dimen/top_up_small_font_size"
                                android:layout_below="@id/top_up_submit_payment_upload_instruction"
                                android:textColor="@color/color_secondary_text"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/top_up_upload_round"
                            android:layout_marginTop="@dimen/top_up_card_item_vertical_spacing"
                            android:layout_marginBottom="@dimen/top_up_card_item_vertical_spacing"
                            android:layout_marginStart="@dimen/top_up_card_item_horizontal_spacing"
                            android:layout_marginEnd="@dimen/top_up_card_item_horizontal_spacing"

                            android:layout_toStartOf="@+id/top_up_submit_payment_upload_instruction"
                            android:layout_centerVertical="true">
                            <ImageView
                                android:id="@+id/top_up_submit_payment_upload_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="0px"
                        android:layout_height="0px"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/top_up_submit_payment_reference_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/top_up_card_item_vertical_spacing"
                        android:layout_marginBottom="@dimen/top_up_card_item_vertical_spacing"
                        android:layout_marginStart="@dimen/top_up_card_item_horizontal_spacing"
                        android:layout_marginEnd="@dimen/top_up_card_item_horizontal_spacing"
                        android:layout_below="@+id/top_up_submit_payment_upload_button">
                        <EditText
                            android:id="@+id/top_up_submit_payment_reference_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:gravity="start"
                            android:textSize="@dimen/top_up_small_font_size"
                            android:hint="Transaction Reference (Optional)"
                            android:textColor="@color/color_primary_text"
                            android:textColorHint="@color/color_secondary_text"
                            />
                    </android.support.design.widget.TextInputLayout>
                    <Button
                        android:id="@+id/top_up_submit_payment_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_below="@+id/top_up_submit_payment_reference_layout"
                        android:text="submit"
                        android:backgroundTint="@color/color_primary"
                        android:clickable="true">
                    </Button>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/top_up_card_vertical_padding"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/color_background_100"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/top_up_submit_bank_details_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_up_info_header_vertical_spacing"
                    android:layout_marginBottom="@dimen/top_up_info_header_vertical_spacing"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/top_up_submit_bank_details_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/top_up_submit_bank_details_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="Bank Details"
                        android:textColor="@color/color_primary_text"
                        android:textSize="@dimen/top_up_large_font_size"
                        android:fontFamily="@string/font_family_medium" />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/top_up_submit_bank_details_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_icons_text"
                    android:paddingStart="@dimen/top_up_card_item_horizontal_spacing"
                    android:paddingEnd="@dimen/top_up_card_item_horizontal_spacing"
                    android:paddingTop="@dimen/top_up_card_item_vertical_spacing"
                    android:paddingBottom="@dimen/top_up_card_item_vertical_spacing"
                    android:layout_below="@+id/top_up_submit_bank_details_header">
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>