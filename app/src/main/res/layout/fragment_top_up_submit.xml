<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/wallet_card_vertical_padding"
        android:paddingBottom="@dimen/wallet_card_vertical_padding"
        android:paddingStart="@dimen/wallet_card_horizontal_padding"
        android:paddingEnd="@dimen/wallet_card_horizontal_padding">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/color_background_100"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/top_up_submit_bank_details_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/wallet_info_header_vertical_spacing"
                    android:layout_marginBottom="@dimen/wallet_info_header_vertical_spacing"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/top_up_submit_bank_details_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="@string/top_up_submit_bank_details_title"
                        android:textColor="@color/color_primary_text"
                        android:textSize="@dimen/wallet_large_font_size"
                        android:fontFamily="@string/font_family_medium" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_icons_text"
                    android:paddingStart="@dimen/wallet_card_item_horizontal_spacing"
                    android:paddingEnd="@dimen/wallet_card_item_horizontal_spacing"
                    android:paddingTop="@dimen/wallet_card_item_vertical_spacing"
                    android:paddingBottom="@dimen/wallet_card_item_vertical_spacing"
                    android:layout_below="@+id/top_up_submit_bank_details_header">
                    <TextView
                        android:id="@+id/top_up_submit_bank_details_instructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing"
                        android:layout_marginBottom="@dimen/wallet_card_item_vertical_spacing"
                        android:layout_marginStart="@dimen/wallet_card_item_horizontal_spacing"
                        android:layout_marginEnd="@dimen/wallet_card_item_horizontal_spacing"
                        android:fontFamily="@string/font_family_medium"
                        android:textSize="@dimen/wallet_small_font_size"
                        android:layout_alignParentTop="true" />
                    <TextView
                        android:id="@+id/top_up_submit_bank_details_indicate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing"
                        android:layout_marginBottom="@dimen/wallet_card_item_vertical_spacing"
                        android:layout_marginStart="@dimen/wallet_card_item_horizontal_spacing"
                        android:layout_marginEnd="@dimen/wallet_card_item_horizontal_spacing"
                        android:textSize="@dimen/wallet_small_font_size"
                        android:layout_below="@+id/top_up_submit_bank_details_instructions" />
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing"
                        android:layout_marginBottom="@dimen/wallet_card_item_vertical_spacing"
                        android:layout_marginStart="@dimen/wallet_card_item_horizontal_spacing"
                        android:layout_marginEnd="@dimen/wallet_card_item_horizontal_spacing"
                        android:stretchColumns="*"
                        android:layout_below="@+id/top_up_submit_bank_details_indicate">
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:fontFamily="@string/font_family_regular"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/top_up_submit_bank_details_account_name"/>
                            <TextView
                                android:id="@+id/top_up_submit_bank_details_account_name_value"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:gravity="start"
                                android:fontFamily="@string/font_family_light"
                                android:textSize="@dimen/wallet_small_font_size"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing">
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:fontFamily="@string/font_family_regular"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/top_up_submit_bank_details_account_number"/>
                            <TextView
                                android:id="@+id/top_up_submit_bank_details_account_number_value"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:gravity="start"
                                android:fontFamily="@string/font_family_light"
                                android:textSize="@dimen/wallet_small_font_size"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing">
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:fontFamily="@string/font_family_regular"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/top_up_submit_bank_details_bank_name"/>
                            <TextView
                                android:id="@+id/top_up_submit_bank_details_bank_name_value"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:gravity="start"
                                android:fontFamily="@string/font_family_light"
                                android:textSize="@dimen/wallet_small_font_size"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing">
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:fontFamily="@string/font_family_regular"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/top_up_submit_bank_details_branch_name"/>
                            <TextView
                                android:id="@+id/top_up_submit_bank_details_branch_name_value"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:gravity="start"
                                android:fontFamily="@string/font_family_light"
                                android:textSize="@dimen/wallet_small_font_size"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing">
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:fontFamily="@string/font_family_regular"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/top_up_submit_bank_details_swift_code"/>
                            <TextView
                                android:id="@+id/top_up_submit_bank_details_swift_code_value"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:gravity="start"
                                android:fontFamily="@string/font_family_light"
                                android:textSize="@dimen/wallet_small_font_size"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing">
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:fontFamily="@string/font_family_regular"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:text="@string/top_up_submit_bank_details_bank_address"/>
                            <TextView
                                android:id="@+id/top_up_submit_bank_details_bank_address_value"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:gravity="start"
                                android:fontFamily="@string/font_family_light"
                                android:textSize="@dimen/wallet_small_font_size"/>
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/color_background_100"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="@dimen/wallet_card_vertical_padding">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/top_up_submit_upload_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/wallet_info_header_vertical_spacing"
                    android:layout_marginBottom="@dimen/wallet_info_header_vertical_spacing"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/top_up_submit_upload_header_icon"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="@string/top_up_submit_upload_title"
                        android:textColor="@color/color_primary_text"
                        android:textSize="@dimen/wallet_large_font_size"
                        android:fontFamily="@string/font_family_medium" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_icons_text"
                    android:paddingStart="@dimen/wallet_card_item_horizontal_spacing"
                    android:paddingEnd="@dimen/wallet_card_item_horizontal_spacing"
                    android:paddingTop="@dimen/wallet_card_item_vertical_spacing"
                    android:layout_below="@+id/top_up_submit_upload_header">
                    <TextView
                        android:id="@+id/top_up_submit_upload_instructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing"
                        android:layout_marginStart="@dimen/wallet_card_item_horizontal_spacing"
                        android:layout_marginEnd="@dimen/wallet_card_item_horizontal_spacing"
                        android:fontFamily="@string/font_family_medium"
                        android:textSize="@dimen/wallet_small_font_size"
                        android:text="@string/top_up_submit_upload_instructions"
                        android:layout_alignParentTop="true" />
                    <TextView
                        android:id="@+id/top_up_submit_upload_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing"
                        android:layout_marginStart="@dimen/wallet_card_item_horizontal_spacing"
                        android:layout_marginEnd="@dimen/wallet_card_item_horizontal_spacing"
                        android:fontFamily="@string/font_family_light"
                        android:textSize="@dimen/wallet_small_font_size"
                        android:text="@string/top_up_submit_upload_notes"
                        android:layout_below="@+id/top_up_submit_upload_instructions"/>
                    <RelativeLayout
                        android:id="@+id/top_up_submit_upload_open_dialog_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing"
                        android:layout_marginStart="@dimen/wallet_card_item_horizontal_spacing"
                        android:layout_marginEnd="@dimen/wallet_card_item_horizontal_spacing"
                        android:clickable="true"
                        android:layout_below="@id/top_up_submit_upload_notes"
                        android:background="@drawable/top_up_upload_btn">
                        <LinearLayout
                            android:id="@+id/top_up_submit_upload_open_dialog_tumbnail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/top_up_upload_round"
                            android:layout_marginEnd="@dimen/wallet_card_item_horizontal_spacing"
                            android:layout_marginStart="@dimen/wallet_card_item_horizontal_spacing"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true">
                            <ImageView
                                android:id="@+id/top_up_submit_upload_open_dialog_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_marginEnd="@dimen/wallet_card_item_horizontal_spacing"
                            android:layout_toEndOf="@+id/top_up_submit_upload_open_dialog_tumbnail"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/top_up_submit_upload_open_dialog_instruction_main"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing"
                                android:layout_marginBottom="@dimen/wallet_card_item_vertical_spacing"
                                android:textSize="@dimen/wallet_large_font_size"
                                android:textColor="@color/color_secondary_text"/>
                            <TextView
                                android:id="@+id/top_up_submit_upload_open_dialog_instruction_sub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/wallet_card_item_vertical_spacing"
                                android:maxLines="2"
                                android:textSize="@dimen/wallet_small_font_size"
                                android:textColor="@color/color_secondary_text"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="0px"
                        android:layout_height="0px"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/top_up_submit_upload_reference_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing"
                        android:layout_marginStart="@dimen/wallet_card_item_horizontal_spacing"
                        android:layout_marginEnd="@dimen/wallet_card_item_horizontal_spacing"
                        android:layout_below="@+id/top_up_submit_upload_open_dialog_button">
                        <EditText
                            android:id="@+id/top_up_submit_upload_reference_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:gravity="start"
                            android:textSize="@dimen/wallet_small_font_size"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:hint="@string/top_up_submit_reference_hint"
                            android:textColor="@color/color_primary_text"
                            android:textColorHint="@color/color_secondary_text" />
                    </android.support.design.widget.TextInputLayout>
                    <Button
                        android:id="@+id/top_up_submit_upload_submit_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/wallet_card_item_vertical_spacing"
                        android:layout_marginBottom="@dimen/wallet_card_item_vertical_spacing"
                        android:layout_below="@+id/top_up_submit_upload_reference_layout"
                        android:text="@string/top_up_submit_upload_submit_label"
                        android:clickable="true"
                        app:backgroundTint="@color/color_primary"
                        style="@style/Widget.AppCompat.Button.Colored">
                    </Button>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>