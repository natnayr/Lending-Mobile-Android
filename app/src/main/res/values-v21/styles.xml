<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:colorAccent">@color/color_accent</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="PreferenceThemeOverlay" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:textViewStyle">@style/PreferenceThemeTextViewStyle</item>
    </style>

    <style name="PreferenceThemeTextViewStyle" parent="android:TextAppearance.Material.Widget.TextView">
        <item name="android:fontFamily">@string/font_family_regular</item>
    </style>

    <style name="AppAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:colorAccent">@color/color_accent</item>
    </style>

    <style name="AppAlertDialogContent" parent="Theme.AppCompat.DayNight">
        <item name="android:colorAccent">@color/color_accent</item>
    </style>

    <style name="RobotoTextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@string/font_family_light</item>
        <item name="android:textColor">@color/color_primary_text</item>
    </style>

</resources>

