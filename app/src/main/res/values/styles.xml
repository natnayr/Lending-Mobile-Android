<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="LoanListStyle" parent="AppTheme">
        <!-- Stub for screens with sufficient width, in other screen sizes it will change-->
    </style>

    <style name="LoanDetailStyle" parent="AppTheme">
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@string/font_family_light</item>
        <item name="android:textColor">@color/color_primary_text</item>
    </style>

</resources>
