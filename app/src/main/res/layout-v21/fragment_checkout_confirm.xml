<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/toolbar_custom_header"
        layout="@layout/toolbar_custom"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/checkout_confirm_success_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/checkout_confirm_success_logo_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkout_confirm_success_congrats_label"
            android:textSize="@dimen/toolbar_custom_title_size"
            android:textColor="@color/color_primary_text_800"
            android:fontFamily="@string/font_family_medium"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/checkout_confirm_message_margin"
            android:gravity="center"
            android:text="@string/checkout_confirm_success_message_label"
            android:textSize="@dimen/checkout_large_font_size"
            android:textColor="@color/color_primary_text_800"
            android:fontFamily="@string/font_family_light"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/checkout_confirm_continue_button"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/checkout_confirm_action_bottom_vertical_margin"
        android:paddingBottom="@dimen/checkout_confirm_action_bottom_vertical_margin"
        android:background="@color/color_green_500">
        <TextView
            android:id="@+id/checkout_confirm_continue_button_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_icons_text"
            android:textSize="@dimen/toolbar_custom_title_size"
            android:fontFamily="@string/font_family_regular"
            android:text="@string/checkout_confirm_continue_action_label"/>
    </LinearLayout>

</RelativeLayout>